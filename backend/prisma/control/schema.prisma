enum TenantStatus {
  PROVISIONING
  ACTIVE
  INACTIVE
  SUSPENDED
  DELETED
}

enum MemberRole {
  OWNER
  ADMIN
  MEMBER
  VIEWER
}

enum SubscriptionStatus {
  TRIALING
  ACTIVE
  PAST_DUE
  CANCELED
  UNPAID
  INCOMPLETE
  INCOMPLETE_EXPIRED
}

enum BillingCycle {
  MONTHLY
  YEARLY
}

enum InvoiceStatus {
  PENDING
  PAID
  OVERDUE
  CANCELED
  REFUNDED
}

enum UsageMetricType {
  USERS
  TICKETS
  STORAGE
  API_CALLS
  COMMENTS
}
