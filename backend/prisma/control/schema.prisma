// ğŸ“Š USAGE TRACKING
// â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•

model UsageRecord {
  id       String @id @default(cuid())
  tenantId String

  // Metrics
  metricType    UsageMetricType
  value         Int
  previousValue Int             @default(0)

  // Time tracking
  recordedAt    DateTime @default(now())
  recordedMonth Int // Pour grouper par mois
  recordedYear  Int // Pour grouper par annÃ©e

  // Metadata
  metadata Json?

  // Relations
  tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  @@unique([tenantId, metricType, recordedMonth, recordedYear])
  @@index([tenantId, recordedYear, recordedMonth])
  @@map("usage_records")
}

